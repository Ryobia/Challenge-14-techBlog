<div class="card m-4 post">
  <div class="card-body color1 tcolor2 post">
    <div class="card-title">
      <h3 class="inner-post"><span>{{title}}</span></h3>
    </div>
    <div>
      <p><span>{{content}}</span></p>
    </div>
  
    by {{user.username}} on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>

</div>